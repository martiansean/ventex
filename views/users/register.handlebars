<div class="row">
  <div class="col s12 m12">
    <br/>
    <div class="card">
      <div class="card-content white-text">
        <div class="row">
          <form method="post" action="/users/register" class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input id="first_name" name="name" type="text" class="validate" value="{{name}}">
                <label for="first_name">Name</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="first_name" name="email" type="text" class="validate" value="{{email}}">
                <label for="first_name">Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" name="password" class="validate" value="{{password}}">
                <label for="password">Password</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" name="password2" class="validate" value="{{password2}}">
                <label for="password">Confirm password</label>
              </div>
            </div>
            <button class="btn waves-effect col s12 m12 waves-light blue darken-1" type="submit" name="action">
              Sign up
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>