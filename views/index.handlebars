  <div class="col s12 m12">
    </br>
    <div class="card">
      <div class="card-content white-text">
        <div class="row">
          <form method="post" action="/users/login" class="col s12">
            <div class="row">
              <div class="input-field col s12">
                <input id="first_name" name="email" type="text" class="validate">
                <label for="first_name">Username</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <input id="password" type="password" name="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>
            <button class="btn waves-effect col s12 m12 waves-light blue darken-1" type="submit" name="action">
               Sign in
            </button>
          </form>
        </div>
      </div>
    </div>
    <p>Don't have an account? <a href="/users/register"><b>Sign up</b></a> here</p>
